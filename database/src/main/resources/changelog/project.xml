<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="project.1" author="wiktor" context="db-init">
        <createTable tableName="project">
            <column name="id" type="number"/>
            <column name="id_course" type="number" />
            <column name="topic" type="varchar(100)" />
            <column name="next_date" type="date" />
            <column name="name" type="varchar(100)" />
            <column name="points" type="number" />
            <column name="state" type="boolean" />
            <column name="id_tutor" type="numeric" />
            <column name="gitlab_page" type="varchar(100)" />
        </createTable>
    </changeSet>
    <changeSet id="project.2" author="wiktor">
        <addPrimaryKey tableName="project" columnNames="id"/>
        <addForeignKeyConstraint baseTableName="project" baseColumnNames="id_course"
                                 constraintName="id_course_foreign" referencedTableName="course" referencedColumnNames="id"/>
        <addForeignKeyConstraint baseTableName="project" baseColumnNames="id_tutor"
                                 constraintName="id_tutor_foreign" referencedTableName="user" referencedColumnNames="id"/>
        <createSequence sequenceName="project_seq" startValue="1" cycle="false"/>
    </changeSet>
</databaseChangeLog>