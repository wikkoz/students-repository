<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="user.project.1" author="wiktor" context="db-init">
        <createTable tableName="user_project">
            <column name="id" type="number"/>
            <column name="id_project" type="number"/>
            <column name="id_user" type="number" />
            <column name="confirmed" type="boolean" />
        </createTable>
    </changeSet>
    <changeSet id="user.project.2" author="wiktor">
        <addPrimaryKey tableName="user_project" columnNames="id"/>
        <createSequence sequenceName="user_project_seq" startValue="1" cycle="false"/>
        <addForeignKeyConstraint baseTableName="user_project" baseColumnNames="id_user"
                                 constraintName="id_user_foreign_2" referencedTableName="user" referencedColumnNames="id"/>
        <addForeignKeyConstraint baseTableName="user_project" baseColumnNames="id_project"
                                 constraintName="id_project_foreign" referencedTableName="project" referencedColumnNames="id"/>
    </changeSet>
</databaseChangeLog>